@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">📄 Konuşma Özeti</h2>

    @if (!string.IsNullOrWhiteSpace(ViewBag.Ozet as string))
    {
        <div class="alert alert-success">
            <pre style="white-space: pre-wrap;">@ViewBag.Ozet</pre>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Özet bulunamadı veya oluşturulamadı.</div>
    }

    <a href="/ChatLog/Index" class="btn btn-secondary mt-3">🔙 Geri Dön</a>
</div>