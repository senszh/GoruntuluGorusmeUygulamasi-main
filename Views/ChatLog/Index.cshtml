@using System.Linq
@model List<GoruntuluGorusmeBitirme.Database.CHAT_LOG>

@{
    ViewBag.Title = "Konuşma Kayıtlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">📝 Konuşma Kayıtlarım</h2>
<a href="/ChatLog/Ozetle" class="btn btn-info btn-sm mt-2">
    🧠 Bu Sohbeti Özetle
</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">Henüz bir konuşma kaydınız bulunmamaktadır.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tarih</th>
                <th>İçerik</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.SENT_TIME?.ToString("dd.MM.yyyy HH:mm"))</td>
                    <td>@item.MESSAGE_CONTENT</td>
                </tr>
            }
        </tbody>
    </table>
}
